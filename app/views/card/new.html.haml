-# クレジット確認ページ

-# ヘッダー
= render "card-header"

.card-new
  .card-new__content
    %h2.payment 支払い方法
    = form_tag(pay_card_index_path, method: :post, id: 'charge-form',  name: "inputForm", class: "payment") do
      .card-new__content__credit
        .card-new__content__credit__number
          %label.payment カード番号
          %span.payment 必須
          = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number", class: "payment"
          %ul.payment
            %li
              = image_tag "https://pcweb-assets.mercdn.net/assets/img/card/visa.svg?3237555052", size: "50x20"
            %li
              = image_tag "https://pcweb-assets.mercdn.net/assets/img/card/master-card.svg?3237555052", size: "35x20"
            %li
              = image_tag "https://pcweb-assets.mercdn.net/assets/img/card/jcb.svg?3237555052", size: "30x20"
            %li
              = image_tag "https://pcweb-assets.mercdn.net/assets/img/card/saison-card.svg?3237555052", size: "30x20"
            %li
              = image_tag "https://pcweb-assets.mercdn.net/assets/img/card/american_express.svg?3237555052", size: "20x20"
            %li
              = image_tag "https://pcweb-assets.mercdn.net/assets/img/card/dinersclub.svg?3237555052", size: "30x20"
            %li
              =image_tag "https://pcweb-assets.mercdn.net/assets/img/card/discover.svg?3237555052", size: "30x20"

        .card-new__content__credit__deadline
          %label.payment 有効期限
          %span.payment 必須
          %br/
          .card-new__content__credit__deadline__inner
            .card-new__content__credit__deadline__inner__time
              %select#exp_month{name: "exp_month", type: "text", class: "time"}
                %option{value: ""} --
                %option{value: "1"}01
                %option{value: "2"}02
                %option{value: "3"}03
                %option{value: "4"}04
                %option{value: "5"}05
                %option{value: "6"}06
                %option{value: "7"}07
                %option{value: "8"}08
                %option{value: "9"}09
                %option{value: "10"}10
                %option{value: "11"}11
                %option{value: "12"}12
              %i.time
                %before
              %span 月
            .card-new__content__credit__deadline__inner__time
              %select#exp_year{name: "exp_year", type: "text", class: "time"}
                %option{value: ""} --
                %option{value: "2019"}19
                %option{value: "2020"}20
                %option{value: "2021"}21
                %option{value: "2022"}22
                %option{value: "2023"}23
                %option{value: "2024"}24
                %option{value: "2025"}25
                %option{value: "2026"}26
                %option{value: "2027"}27
                %option{value: "2028"}28
                %option{value: "2029"}29
              %i.time
                %before
              %span 年
        .card-new__content__credit__security
          %label.payment セキュリティコード
          %span.payment 必須
          = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc", class: "security"
          .card-new__content__credit__security__text
            .card-new__content__credit__security__text__back
              -# %span.back
              -# カード裏面の番号とは？
        %p.payment
        #card_token
        = submit_tag "追加する", id: "token_submit", class: "button"

-# フッター
= render "card-footer"